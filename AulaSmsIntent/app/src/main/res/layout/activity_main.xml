<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hellotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/chamarBtn"
        android:text="Hello World!" />

    <EditText
        android:id="@+id/usernameEdt"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hellotext"
        android:layout_below="@+id/hellotext"
        android:ems="10"
        android:hint="Usename"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/messageEdt"
        android:layout_width="345dp"
        android:layout_height="193dp"
        android:layout_alignStart="@+id/hellotext"
        android:layout_below="@+id/usernameEdt"
        android:ems="10"
        android:hint="message"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/numeroEdt"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/hellotext"
        android:layout_below="@+id/messageEdt"
        android:ems="10"
        android:hint="numero"
        android:inputType="textPersonName" />


    <Button
        android:id="@+id/chamarBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        android:layout_marginStart="26dp"
        android:text="Enviar SMS"
        app:layout_constraintTop_toBottomOf="@+id/messageEdt"
        tools:layout_editor_absoluteX="139dp" />


</RelativeLayout>